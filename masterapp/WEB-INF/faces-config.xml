<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    <managed-bean>
 <managed-bean-name>ProductBean</managed-bean-name> 
    <managed-bean-class>com.hex.mbean.ProductBean</managed-bean-class> 
    <managed-bean-scope> session </managed-bean-scope> 
</managed-bean>

    <navigation-rule>        
        <navigation-case>
 <from-outcome>productAdd</from-outcome> 
    <to-view-id>/pages/ProductAdd.xhtml</to-view-id> 
</navigation-case>

<navigation-case>
 <from-outcome>productEdit</from-outcome> 
    <to-view-id>/pages/ProductEdit.xhtml</to-view-id> 
</navigation-case>

<navigation-case>
 <from-outcome>productList</from-outcome> 
    <to-view-id>/pages/ProductList.xhtml</to-view-id> 
</navigation-case>


    </navigation-rule>
     
   
</faces-config>
